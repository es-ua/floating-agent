# Nginx config for floating-agent.js (subdomain) and chatwidget (domain)

# floating-agent.js и index.html доступны по floatingagent.jetvps.net
server {
    listen 80;
    server_name floatingagent.jetvps.net;
    root /var/www/floating-agent;
    index index.html;

    location / {
        try_files $uri $uri/ =404;
    }

    # Кэширование JS
    location ~* \.js$ {
        add_header Cache-Control "public, max-age=31536000, immutable";
        try_files $uri =404;
    }
}

# chatwidget доступен по поддомену chatwidget.floatingagent.jetvps.net
server {
    listen 80;
    server_name chatwidget.floatingagent.jetvps.net;

    location / {
        proxy_pass http://localhost:3000;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_cache_bypass $http_upgrade;
    }
}
